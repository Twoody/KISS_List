<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_manage_category" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/toolbar_settingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_title"
            android:textColor="@android:color/black"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView_listBehavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_settings"
        android:layout_marginStart="8dp"
        android:text="List Behavior" />
    <TextView
        android:id="@+id/textView_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_listBehavior"
        android:layout_marginStart="8dp"
        android:text="Add item to end of list"
        android:textSize="20dp"/>
    <Switch
        android:id="@+id/switch_isAppending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView_listBehavior"
        android:layout_marginEnd="8dp" />

    <View
        android:id="@+id/vertbar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_switch"
        android:layout_gravity="center"
        android:background="#808080">

    </View>

    <Button
        android:id="@+id/button_chooseFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView_listBehavior"
        android:layout_below="@+id/vertbar"
        android:text="@string/settings_font" />

    <TextView
        android:id="@+id/textView_currentFont"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/button_chooseFont"
        android:layout_alignEnd="@+id/switch_isAppending"
        android:text="Current Font"
        android:textSize="20dp"
        android:gravity="right|center"/>
    <View
        android:id="@+id/vertbar2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_chooseFont"
        android:layout_gravity="center"
        android:background="#808080">
    </View>

</RelativeLayout>
